<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee9e9"
    tools:context="com.android.wondercom.Main2Activity">


    <android.support.v7.widget.CardView
        android:id="@+id/scc"
        android:layout_width="163dp"
        android:layout_height="230dp"
        android:layout_alignEnd="@+id/cva"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cva"
        android:layout_marginTop="18dp">

        <RelativeLayout
            android:id="@+id/rlsc"
            android:layout_width="167dp"
            android:layout_height="229dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/editText15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"

                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textAutoComplete|textMultiLine"
                android:text="SMART CONTROL"
                android:textColor="@color/sc"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="63dp"
                android:src="@drawable/bl" />

            <ImageView
                android:id="@+id/scci"
                android:layout_width="120dp"
                android:layout_height="122dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/sc" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cva"
        android:layout_width="163dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cvsa"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp">

        <RelativeLayout
            android:id="@+id/rla"
            android:layout_width="167dp"
            android:layout_height="229dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/editText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:text="SETTINGS"
                android:textColor="@color/sc"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="60dp"
                android:src="@drawable/bl" />

            <ImageView
                android:id="@+id/abi"
                android:layout_width="120dp"
                android:layout_height="122dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/ss" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvc2"
        android:layout_width="163dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/scc"
        android:layout_marginStart="11dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp">

        <RelativeLayout
            android:id="@+id/rlc"
            android:layout_width="167dp"
            android:layout_height="229dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/editText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:text="SMART COMMUNICATION"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/sc"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/editText11"
                android:src="@drawable/bl" />

            <ImageView
                android:id="@+id/sci"
                android:layout_width="120dp"
                android:layout_height="122dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/scc" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvsa"
        android:layout_width="163dp"
        android:layout_height="230dp"
        android:layout_alignLeft="@+id/cvc2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cvc2"
        android:layout_marginBottom="25dp">

        <RelativeLayout
            android:id="@+id/smrl"
            android:layout_width="167dp"
            android:layout_height="229dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/editText17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:text="SMART ACCESS"
                android:textColor="@color/sc"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="60dp"
                android:src="@drawable/bl" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="122dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/sa" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
