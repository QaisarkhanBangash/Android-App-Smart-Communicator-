<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.wondercom.SmartAccess"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#eee9e9"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="348dp"
            android:layout_height="63dp"
            android:background="@color/white">

            <Button
                android:id="@+id/button4"
                android:layout_width="78dp"
                android:layout_height="37dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="11dp"
                android:background="@color/sc"
                android:text="GET"
                android:textColor="@color/actionbar_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:text="RECENT MESSAGES"
                android:textColor="@color/st"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_menu_info_details" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        >

        <RelativeLayout
            android:id="@+id/r5"
            android:layout_width="348dp"
            android:layout_height="63dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:text="CONTACTS"
                android:textColor="@color/st"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_menu_info_details" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="78dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView5"
                android:ems="10"
                android:inputType="textPersonName" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/r4"
